<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBright"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        style="@style/text_dark_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/large_space"
        android:text="Material Dialog Title"
        android:textSize="@dimen/font_20_sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_message"
        style="@style/text_dark_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:padding="@dimen/large_space"
        android:text="Content message of the material dialog for application" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_negative"
            style="@style/text_accent_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bright_radius"
            android:padding="@dimen/xlarge_space"
            android:textAllCaps="true"
            android:text="Cancel" />

        <TextView
            android:id="@+id/btn_positive"
            style="@style/text_accent_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bright_radius"
            android:padding="@dimen/xlarge_space"
            android:textAllCaps="true"
            android:text="Ok" />
    </LinearLayout>
</LinearLayout>